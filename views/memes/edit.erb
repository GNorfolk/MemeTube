<h1><%= @edit %></h1>


<form action="/memes/<%= @meme.id %>" method="POST">

	<label for="title">Title: </label>
	<input type="text" name="title" value="<%= @meme.title %>">

	<label for="description">Description: </label>
	<input type="text" name="description" value="<%= @meme.description %>">

	<label for="url">Link: </label>
	<input type="text" name="url" value="<%= @meme.url %>">

	<label for="genre">Genre: </label>
	<input type="text" name="genre" value="<%= @meme.genre %>">

	<input type="submit" name="Save">
</form>