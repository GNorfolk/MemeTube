<h2><%= @meme.title %> (<%= @meme.genre %>)</h2>
<iframe width="1120" height="630" src="https://www.youtube.com/embed/#{meme.url}" frameborder="0" allowfullscreen></iframe>
<p><%= @meme.description %></p>

<form action="/memes/<%= @meme.id %>" method="POST">
	<input type="hidden" name="_method" value="DELETE">
	<input type="submit" name="Delete" value="Delete meme!">
</form>